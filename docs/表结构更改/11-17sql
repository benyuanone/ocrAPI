alter table `ourway_sys_menus`
   add column `CC` int(11) NULL ,
   change `PX` `PX` decimal(8,4) NULL ;

ALTER TABLE `ourway_sys_files`
   ADD COLUMN `FILE_NO` VARCHAR(64) NULL AFTER `STATE`,
   ADD COLUMN `FILE_DESC` VARCHAR(1600) NULL AFTER `FILE_NO`,
   ADD COLUMN `FILE_TYPE` VARCHAR(64) NULL AFTER `FILE_DESC`,
   CHANGE `DEPT_PATH` `DEPT_PATH` VARCHAR(240) NULL ;

ALTER table `ourway_sys_layout_component`
      add column `COLUMN_DISABLE` varchar(640) NULL ;


alter table ourway_sys_depat
   add column `PX` numeric(8) DEFAULT '4' NULL,
   add column `CC` int NULL;